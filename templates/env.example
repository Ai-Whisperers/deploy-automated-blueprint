# ===========================================
# Self-Deploy Configuration
# Copy to .env and fill in values
# ===========================================

# Cloudflare Tunnel
# Get TUNNEL_ID from: cloudflared tunnel list
TUNNEL_NAME=my-app
TUNNEL_ID=
DOMAIN=app.example.com

# Service Ports
PORT_FRONTEND=3000
PORT_API=8000
PORT_WEBSOCKET=3001
PORT_REDIS=6379
PORT_POSTGRES=5432
PORT_MONGO=27017

# Database (if applicable)
DATABASE_URL=
REDIS_URL=redis://localhost:${PORT_REDIS}
# DB_NAME=app
# DB_USER=app
# DB_PASSWORD=

# API Keys (add your own)
# OPENAI_API_KEY=
# STRIPE_KEY=

# Environment
APP_ENV=production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info
